{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Disco list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nse</th>
                <th>Fab</th>
                <th>Cap</th>
                <th>Modelo</th>
                <th>Tip</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('disco_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nse }}</td>
                <td>{{ entity.fab }}</td>
                <td>{{ entity.cap }}</td>
                <td>{{ entity.modelo }}</td>
                <td>{{ entity.tip }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('disco_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('disco_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('disco_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
